<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InternRegistration</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/internRegistration.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">


</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand innav" asp-area="" asp-page="/Index">InternRegistration</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item me-2 ms-3">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login </a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Signup">Sign-Up </a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark" asp-area="" asp-page="/List">Intern List </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container row">
            <div class="col-md-10">
                &copy; 2023 - InternRegistration <a asp-area="" asp-page="/Privacy">Privacy Policy</a>
            </div>
            <div class="col align-content-end">
                <span>
                    <a href="https://www.instagram.com"><img src="~/instagram.svg" height="30vh" width="30vw" /></a>
                </span>
                <span>
                    <a href="https://www.facebook.com"><img src="~/facebook.svg" height="30vh" width="30vw" /></a>
                </span>
                <span>
                    <a href="https://twitter.com "><img src="~/twitter.svg" height="30vh" width="30vw" /></a>
                </span>
            </div>

        </div>
           
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>